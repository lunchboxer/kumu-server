{
  "name": "kumu-server",
  "scripts": {
    "start": "node -r dotenv/config src/index.js",
    "dev": "NODE_ENV='development' nodemon -e js,graphql -x node -r dotenv/config src/index.js",
    "debug": "nodemon -e js,graphql -x node --inspect -r dotenv/config src/index.js",
    "deploy": "export $(cat .env | xargs) && prisma deploy",
    "nodemon": "nodemon",
    "build": "npm run build:admin && npm run build:parents && npm run deploy",
    "build:admin": "rollup -c admin/rollup.config.js",
    "build:parents": "rollup -c parents/rollup.config.js",
    "dev:admin": "run-p admin:build admin:serve",
    "admin:build": "rollup -c admin/rollup.config.js -w",
    "admin:serve": "sirv admin/public --single --dev --port 5010",
    "dev:parents": "run-p parents:build parents:serve",
    "parents:build": "rollup -c parents/rollup.config.js -w",
    "parents:serve": "sirv parents/public --single --dev --port 5011"
  },
  "dependencies": {
    "bcryptjs": "2.4.3",
    "compression": "^1.7.4",
    "dotenv": "6.2.0",
    "graphql-binding": "^2.5.1",
    "graphql-shield": "^5.3.1",
    "graphql-yoga": "1.18.1",
    "jsonwebtoken": "8.5.1",
    "node-fetch": "^2.6.0",
    "pinyin": "^2.8.3",
    "prisma": "^1.34.3",
    "prisma-client-lib": "1.31.1",
    "serve-static": "^1.14.1"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.10.2",
    "bulma": "^0.7.5",
    "date-fns": "^2.0.1",
    "eslint": "^6.2.2",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.2.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-svelte3": "^2.7.3",
    "eslint-plugin-unicorn": "^10.0.0",
    "fitty": "^2.2.6",
    "flatpickr": "^4.5.7",
    "graphql-subscriptions-client": "^0.12.0",
    "marked": "^0.7.0",
    "nodemon": "1.19.1",
    "npm-run-all": "^4.1.5",
    "rollup": "^1.20.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-commonjs-alternate": "0.0.6",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-livereload": "^1.0.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-notify": "^1.1.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-sass": "^1.2.2",
    "rollup-plugin-svelte": "^5.1.0",
    "rollup-plugin-terser": "^5.1.1",
    "sirv": "^0.4.2",
    "sirv-cli": "^0.4.4",
    "svelte": "^3.9.1",
    "svelte-spa-router": "^1.2.0"
  }
}
